# Copy this file to `.env` and fill in the values before running Podfree locally.

PODFREE_USERNAME=admin
PODFREE_PASSWORD=Admin123
DEEPGRAM_API_KEY=your-deepgram-api-key

GHOST_URL=https://your-ghost-site.com
GHOST_ADMIN_API_KEY=xxxxxx:yyyyyy

# Common OpenRouter models (USD per 1M tokens):
# deepseek/deepseek-r1 → $0.42 in / $2.11 out
# anthropic/claude-3.7-sonnet → $3.16 in / $15.79 out
# anthropic/claude-3.5-haiku → $0.84 in / $4.21 out
OPENROUTER_API_KEY=sk-or-your-key
PODFREE_LLM_MODEL=deepseek/deepseek-r1
PODCAST_AUTHOR=Your Name

LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_REDIRECT_URI=http://localhost:8005/linkedin/callback
LINKEDIN_ORG_VANITY=democracy-innovators
LINKEDIN_HASHTAGS=#Podcast #CivicTech #DemocracyInnovation #DigitalPublicInfrastructure
LINKEDIN_LLM_MODEL=anthropic/claude-3-haiku
